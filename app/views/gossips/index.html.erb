<p id="notice">
    <%= notice %>
</p>

<h1>Gossips</h1>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th scope="col">name</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">commentaire</th>
            
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @gossips.each do |gossip| %>
            <tr>
                <td>
                    <%= user.name %>
                </td>
                <td>
                    <%= gossip.title %>
                </td>
                <td>
                    <%= gossip.content %>
                </td>
                <td>
                    <%= comment.commentaire %>
                </td>
                <td>
                    <%= link_to 'Show', gossip %>
                </td>
                <td>
                    <%= link_to 'Edit', edit_gossip_path(gossip) %>
                </td>
                <td>
                    <%= link_to 'Destroy', gossip, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
            <% end %>
    </tbody>
</table>

